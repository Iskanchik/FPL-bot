# Required
BOT_TOKEN=your_telegram_bot_token_here

# Optional - Monitoring
TARGET_CHAT_ID=  # Target chat for live notifications
ENABLE_LIVE_MONITOR=0  # 1 to enable live match monitoring
LIVE_POLL_INTERVAL=30  # Default interval (adaptive polling will adjust)

# League Configuration
LEAGUE_ID=980121  # Your FPL league ID

# Cache Settings
FPL_CACHE_TTL=8  # Bootstrap cache TTL in minutes
FPL_STANDINGS_TTL=60  # Standings cache TTL in seconds
FPL_PICKS_TTL=300  # Picks cache TTL in seconds
FPL_PICKS_ALLOW_STALE=1  # Allow serving stale picks on error

# Redis
REDIS_GW_TTL=604800  # Redis TTL for GW data (7 days default)

# Performance & Optimization
FPL_CONCURRENCY=3  # Max concurrent FPL API requests
TELEGRAM_CONCURRENCY=4  # Max concurrent Telegram operations
COMPRESS_SNAPSHOTS=0  # Enable gzip compression for snapshots (1=on, 0=off)

# Network
FPL_PROXY_BASE=  # Optional proxy base URL
ENABLE_HTTP2=1  # Enable HTTP/2 (requires h2 package)

# Server
PORT=10000
USE_WEBHOOK=0  # Use webhook instead of polling (placeholder)
ENABLE_KILL=0  # Kill existing instances on start (placeholder)
